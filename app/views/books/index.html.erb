<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book), class: "show_#{book.id}" %></td>
      <td><%= link_to 'Edit', edit_book_path(book), class: "edit_#{book.id}" %></td>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, class: "destroy_#{book.id}" %></td>
    </tr>
  <% end %>
</table>
<h2>New Book</h2>
<%= form_for(@new_book) do |f| %>
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title, class: "book_title" %></p>
  <p><%= f.label :body %></p>
  <p><%= f.text_area :body, class: "book_body" %></p>
  <p><%= f.submit 'create book' %></p>
<% end %>